<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <%= f.label :position %><br>
    <%= f.number_field :position , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :img %><br>
    <%= f.file_field :img , class: "form-control"%>
  </div>
  
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :duration %><br>
    <%= f.text_field :duration , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :batch_starting_on %><br>
    <%= f.date_select :batch_starting_on , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :fee %><br>
    <%= f.text_field :fee , class: "form-control"%>
  </div>

  <div class="form-group">
    

     
      <%= f.collection_select :corporate_trainer_ids, CorporateTrainer.all, :id, :name, {}, { class: "form-control chosen-select",multiple: true } %>

   
    
  </div>

  <div class="form-group">
  <h4>Split with *</h4>
    <%= f.label :highlights %><br>
    <%= f.text_area :highlights , class: "form-control", rows: 6%>
  </div>

  <div class="form-group">
    <h4>First gap '*' second gap '!'</h4>
    <%= f.label :overview %><br>
    <%= f.text_area :overview , class: "form-control", rows: 7%>
  </div>

  <div class="form-group">
    <%= f.label :curriculum %><br>
    <%= f.text_area :curriculum , class: "form-control",rows: 10%>
  </div>

  <div class="form-group">
    <%= f.label :course_benifits %><br>
    <%= f.text_area :course_benifits , class: "form-control", rows: 8%>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary'%>
  </div>
<% end %>
<!-- form end -->