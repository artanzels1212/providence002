      <h2><%= pluralize(@fee_structure.errors.count, "error") %> prohibited this fee_structure from being saved:</h2>

      <ul>
      <% @fee_structure.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :major_category , class: "form-control"%><br />
    
    <select type="text" name="fee_structure[major_category]" id="fee_structure_major_category" class="form-control">
