<div style="width:88%;margin:0 auto;padding:2%;padding-left:5%;">
<p id="notice"><%= notice %></p>

<h1>Listing Term Pages</h1>

<table>
  <thead>
    <tr>
      <th>Script</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @term_pages.each do |term_page| %>
      <tr>
        <td><%= term_page.script %></td>
        <td><%= link_to 'Show', term_page %></td>
        <td><%= link_to 'Edit', edit_term_page_path(term_page) %></td>
        <td><%= link_to 'Destroy', term_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Term page', new_term_page_path %>
</div>
