<div style="width:88%;margin:0 auto;padding:2%;padding-left:5%;">
<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1> (<a href="/dash/index">Jump to Dash</a>)

<% @teams.each do |team| %>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%=team.name%></h3>
        </div>
        <div class="panel-body">
          <%=image_tag team.img(:thumb), class: "img-rounded"%>
          <h4><%=team.designation%></h4>
          <h6><%= truncate(team.quote,length: 200)%></h6>
          <p>Link to Linkedin: <%=truncate(team.link,length: 100)%></p>
          <p><%= link_to 'Show', team %> |<%= link_to 'Edit', edit_team_path(team) %> | <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
<% end %>  
<hr>
<%= link_to 'New Team', new_team_path %>
    
</div>